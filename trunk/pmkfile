# check _Bool type
CHECK_TYPE(type_bool_posix) {
        REQUIRED = FALSE
        NAME = "_Bool"
}

IF(!type_bool_posix) {
        # check c++ bool type
        CHECK_TYPE(type_bool_cxx) {
                REQUIRED = FALSE
                NAME = "bool"
                LANG = "C++"
        }
}
